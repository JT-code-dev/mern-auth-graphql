{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext", 
    "moduleResolution": "NodeNext", 
    "target": "ESNext",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "typeRoots": ["./node_modules/@types", "./src/types"]
}

